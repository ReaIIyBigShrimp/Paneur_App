<% content_for :title do %>
	<%= @country.Name %>
<% end %>

<% content_for :content do %>
	<div class="row rowmega" id="overview">
		<div class="titolomega hidden-xs hidden-sm col-md-8">&nbsp;
			<span class="visible-xs visible-sm">
				<%= @country.Name %>
			</span>
		</div>
		<div class="titolomega2 hidden-xs col-md-4">Overview</div>
	</div>
	<%= @country.Description %>
		<!-- Add paragraphs if double return -->
	<div style="padding-top:60px;"></div>

	<div class="fascia" id="archival" style="padding-top:10px; padding-bottom:10px;">
		<h4 class="panel-title" style="text-align:right; font-size:22px; padding-right:10px;">Archival sources</h4>
	</div>
		<p style="padding-top:25px;"></p>
	<!--<div class="row rowmega" id="archival"><div class="titolomega hidden-xs hidden-sm col-md-8" id="#archival">&nbsp;</div><div class="titolomega2 col-md-4">Archival sources</div></div>-->
	<ul class="nav nav-list mb-xl">
	<!-- Change link location. Currently, no file is linked -->
	<% @documents.each do |file| %>
		<li class="documenti">
			<%= link_to file.ArchivalCode + "|" + file.Name, "/files/#{file.FileName}", target: "_blank" %>
		</li>
	<% end %>
	<!-- -Can remove condition -->
	<% if @documents.count == 0 %>
		<li class="documenti">
			<p style="padding-left: 15px;">No documents for country</p>
		</li>
	<% end %>
	</ul>
<% end %>